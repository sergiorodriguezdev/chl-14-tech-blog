<div class="card my-3" data-post-id={{id}}>
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">Posted by {{user.name}} on {{format_date createdOn}}</p>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
</div>